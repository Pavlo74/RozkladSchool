@using Rozklad.Core
@using Rozklad.Repository.Dto.PupilDto
@model IEnumerable<Lesson>

@{
}

<div class="float-end">
    <a href="/cabinet/create" class="btn btn-outline-primary">Додати урок</a>
</div>


<h1>Список уроків</h1>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>LessonId</th>
            <th>LessonName</th>
            <th>Year</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var u in Model)
        {
            <tr>
                <td>@u.LessonId </td>
                <td>@u.LessonName </td>
                <td>@u.Year </td>
                
                
                <td>
                    <a href="/users/edit/@u.LessonId" class="btn btn-warning">Редагувати</a>
                    <a href="/users/delete/@u.LessonId" class="btn btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
