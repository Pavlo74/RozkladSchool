@using Rozklad.Repository.Dto.TimetableDto
﻿@using Rozklad.Core
@using Rozklad.Repository
@using Rozklad.Repository.Dto.CabinetDto
@using Rozklad.Repository.Dto.ClassDto
@using Rozklad.Repository.Dto.DayDto
@using Rozklad.Repository.Dto.DisciplineDto
@using Rozklad.Repository.Dto.LessonDto


@model IEnumerable<TimetableReadDto>

@{
}




<div class="float-end">
    <a href="/days/create" class="btn btn-outline-primary">Додати день</a>
</div>


<h1>Розклад уроків</h1>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
           
            <th>Урок</th>
            <th>Клас</th>
               <th>День</th>
                  <th> Предмет</th>
                     <th>Кабінет</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var u in Model)
        {
            <tr>
               
                 <td>@u.Lesson.LessonNumber </td>
                 <td>@u.Class.ClassName  </td>
                
                   <td>@u.Day.DayName</td>
                  <td> @u.Discipline.DisciplineName </td>
                     <td>@u.Cabinet.Name</td>
            
                
                
               
            </tr>
        }
    </tbody>
</table>