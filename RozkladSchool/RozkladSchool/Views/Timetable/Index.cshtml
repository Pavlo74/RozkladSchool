@using Rozklad.Repository.Dto.TimetableDto
﻿@using Rozklad.Core
@using Rozklad.Repository
@using Rozklad.Repository.Dto.CabinetDto
@using Rozklad.Repository.Dto.ClassDto
@using Rozklad.Repository.Dto.TeacherDto
@using Rozklad.Repository.Dto.PupilDto
@using Rozklad.Repository.Dto.SectionDto


@model IEnumerable<TimetableReadDto>

@{
}


<h1>Розклад уроків</h1>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
           
            <th>День</th>
            <th>Дисципліна</th>
            <th>Кабінет</th>
               <th>Вчитель</th>      
                     <th>Початок</th>
                     <th>Закінчення</th>
                     
            
        </tr>
    </thead>
    <tbody>
        @foreach(var u in Model)
        {
            <tr>
               
                  <td>@u.Day</td>
                 <td>@u.Discipline.DisciplineName </td>
                 <td>@u.Cabinet.Name</td>
                  <td>@u.Teacher.TeacherName</td>
                  <td> @u.TimeStart</td>
                  <td>@u.TimeEnd</td>
                  
            
                
                
               
            </tr>
        }
    </tbody>
</table>
 

